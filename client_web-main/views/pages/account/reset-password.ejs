
<div class="container">
    <div class="home">
        <div class="home_container ">
            <div class="home_content text-center">
                <div class="home_title">Đặt lại mật khẩu</div>
            </div>
        </div>
    </div>
    <div id="content" class="row">
        <div class="col-lg-6 content-box-container">
            <form method="POST" action="/users/reset-password?email=<%= email %>">
                <div id="content-box">
                    <p>Vui lòng kiểm tra email để lấy mã xác nhận.</p>
                    <div class="input-row">
                        <p class="input-title">Nhập mã xác nhận</p>
                        <input class="typing-input" name="verifyCode" type="text" placeholder="Nhập mã xác nhận" required>
                    </div>
                    <div class="input-row">
                        <p class="input-title">Mật khẩu mới</p>
                        <input class="typing-input" type="password" id="password" placeholder="Mật khẩu phải có độ dài hơn 6 kí tự"
                            pattern=".{7,}" title="Mật khẩu phải có độ dài hơn 6 kí tự" required>
                    </div>
                    <div class="input-row">
                        <p class="input-title">Xác nhận mật khẩu mới</p>
                        <input class="typing-input" type="password" id="passwordConfirm" placeholder="Mật khẩu phải có độ dài hơn 6 kí tự"
                            name="newPassword" oninput="check(this)" required>
                    </div>
                    <div id="input-row-last">
                        <button type="submit" class="btn btn-danger button">Đặt lại mật khẩu</button>
                    </div>

                    <div class="mes-err-login"><% include ../../partials/messages %></div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function check(input) {
        if (input.value != document.getElementById('password').value) {
            input.setCustomValidity('Mật khẩu không khớp');
        } else {
            input.setCustomValidity('');
        }
    }
</script>